#include <behaviors.dtsi>
#include <dt-bindings/zmk/keys.h>
#include <dt-bindings/zmk/bt.h>

&sk {
  release-after-ms = <1500>;
};

/ {
        keymap {
                compatible = "zmk,keymap";

                default_layer {
// -----------------------------------------------------------------------------------------
// |  TAB |  Q  |  W  |  E  |  R  |  T  |   |  Y  |  U  |  I  |  O  |  P  | BKSP |
// |  ESC |  A  |  S  |  D  |  F  |  G  |   |  H  |  J  |  K  |  L  |  ;  |  '   |
// | SHFT |  Z  |  X  |  C  |  V  |  B  |   |  N  |  M  |  ,  |  .  |  /  | CTRL |
//                    | GUI | LWR | ENT |   | SPC | RSE | ALT |
                        bindings = <
   &kp TAB   &kp Q &kp W &kp E &kp R &kp T     &kp Y     &kp U &kp I     &kp O   &kp P    &kp BSPC
   &kp ESC   &kp A &kp S &kp D &kp F &kp G     &kp H     &kp J &kp K     &kp L   &kp SEMI &kp SQT
   &sk LSHFT &kp Z &kp X &kp C &kp V &kp B     &kp N     &kp M &kp COMMA &kp DOT &kp FSLH &kp RCTRL
                   &kp LGUI    &mo 1 &kp RET   &kp SPACE &mo 2 &kp RALT
                        >;
                };
                lower_layer {
// -----------------------------------------------------------------------------------------
// |  TAB |  1    |  2    |  3   |  4  |  5  |   |  6   |  7   |  8   |  9    |  0    | BKSP |
// | BTCLR| BT1   | BT2   | BT3  |     |     |   | LFT  | DWN  |  UP  | RGT   | MUTE  |      |
// | SHFT | BRIUP | BRIDN | ALLW |     |     |   | PREV | PLAY | NEXT | VOLDN | VOLUP | CTRL |
//                        | GUI  |     | ENT |   | SPC  |      | ALT  |
                        bindings = <
   &kp TAB    &kp N1       &kp N2       &kp N3                            &kp N4 &kp N5    &kp N6         &kp N7           &kp N8     &kp N9            &kp N0          &kp BSPC
   &bt BT_CLR &bt BT_SEL 0 &bt BT_SEL 1 &bt BT_SEL 2                      &trans &trans    &kp LEFT       &kp DOWN         &kp UP     &kp RIGHT         &kp K_MUTE      &trans
   &kp LSHFT  &kp F14      &kp F15      &kp C_AC_DESKTOP_SHOW_ALL_WINDOWS &trans &trans    &kp C_PREVIOUS &kp C_PLAY_PAUSE &kp C_NEXT &kp C_VOLUME_DOWN &kp C_VOLUME_UP &kp RCTRL
                                        &kp LGUI                          &trans &kp RET   &kp SPACE      &trans           &kp RALT
                        >;
                };

                raise_layer {
// -----------------------------------------------------------------------------------------
// | S(TAB) |  !  |  @  |  #  |  $  |  %  |   |  ^  |  &  |  *  |  (  |  )  | BKSP |
// |        |  `  |     |     |     |     |   |  -  |  =  |  [  |  ]  |  \  |
// | SHFT   |  ~  |     |     |     |     |   |  _  |  +  |  {  |  }  | "|" | CTRL |
//                    | GUI |     | ENT |   | SPC |     | ALT |
                        bindings = <
   &kp LS(TAB)  &kp EXCL  &kp AT &kp HASH &kp DLLR &kp PRCNT   &kp CARET &kp AMPS  &kp KP_MULTIPLY &kp LPAR &kp RPAR &kp BSPC
   &trans       &kp GRAVE &trans &trans   &trans   &trans      &kp MINUS &kp EQUAL &kp LBKT        &kp RBKT &kp BSLH &trans
   &kp CAPSLOCK &kp TILDE &trans &trans   &trans   &trans      &kp UNDER &kp PLUS  &kp LBRC        &kp RBRC &kp PIPE &kp RCTRL
                                &kp LGUI &trans   &kp RET     &kp SPACE &trans    &kp RALT
                        >;
                };
        };
};
